#!/bin/ksh

ROOT=/mnt/disk/livres/autres/site_md/fr/bible/glaire

function get_title {
    echo $(grep -E '^# ' $1 | sed 's/#//')
}

path=$(find $ROOT -name *$1*)
chap=$(echo $2 | grep -oE '^[0-9]{1,3}')
start=$(echo $2 | grep -oE ':[0-9]{1,3}' | sed 's/://')
end=$(echo $2 | grep -oE '\-[0-9]{1,3}' | sed 's/-//')
if [[ -z $end ]]; then
	echo $(get_title $path/index.md)' '$chap':'$start' :\n'
else
	echo $(get_title $path/index.md)' '$chap':'$start'-'$end' :\n'
fi

if [[ $chap -lt 10 ]]; then
	chap='0'$chap
fi

cat $path'/chap'$chap'.md' \
| awk -v start=$start -v end=$end ' BEGIN {
	text = "";
}
! /Note/ {
		if (start ~ end) {
			end = start;
		}
		if (start == "") {
			print $0;
		}
		for (i = start; i <= end; i++) {
			pat1 = " " i " ";
			pat2 = "^"i " ";
			if ($0 ~ pat1 || $0 ~ pat2) {
				if ($0 != text) {
					print $0 "\n";	
					text = $0;
				}
			}
		}
}'
